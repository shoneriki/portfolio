      <input type="email" id="email" name="email" placeholder="Enter Your Email" required>
      <label for="subject">Subject:</label>
      <input type="subject" id="subject" name="email" placeholder="Enter Your Email" required>
      <%# <label for="service">Services:</label>
      <select name="services" id="service">
        <option value="">Front-End</option>
        <option value="">Back-End</option>
        <option value="">Other Skills</option>
      </select> %>
      <label for="message">Message:</label>
      <textarea name="message" id="message" cols="10" rows="10"></textarea>
      <input type="Submit" value="Submit">
    </form>
    <div id="status" id="my-form"></div>
  </div>
</section>
